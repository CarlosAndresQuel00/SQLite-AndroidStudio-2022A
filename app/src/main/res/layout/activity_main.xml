<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF8F8"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="56dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="409dp"
            android:layout_height="46dp"
            android:text="código de artículo:"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="232dp"
            android:layout_height="44dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="65dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="408dp"
            android:layout_height="40dp"
            android:text="descripción:"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="118dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="406dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="165dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="408dp"
            android:layout_height="43dp"
            android:text="precio:"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="221dp" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="201dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000"
            tools:layout_editor_absoluteX="-3dp"
            tools:layout_editor_absoluteY="267dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="alta"
            android:text="Alta"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="368dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="consultaporcodigo"
            android:text="Consulta por codigo"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="424dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="consultapordescripcion"
            android:text="Consulta por descripcion"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="489dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="bajaporcodigo"
            android:text="Baja por codigo"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="554dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="modificacion"
            android:text="Modificacion"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="619dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>